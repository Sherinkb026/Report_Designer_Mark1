<UserControl x:Class="Report_Mark1.ReportTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Report_Mark1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" Padding="20" BorderThickness="1" BorderBrush="Black">
        <Grid Width="793" Height="1122">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="KR BAKERS" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" />
                <TextBlock Text="Sales Report" FontSize="16" HorizontalAlignment="Center" />

                <TextBlock Text="{Binding CurrentDate}" FontWeight="Bold" FontSize="16" />
                <!-- Dynamic Table -->
                <DataGrid ItemsSource="{Binding ReportItems}" AutoGenerateColumns="True" Margin="10" />


                <!-- Footer -->
                <StackPanel Orientation="Horizontal" Margin="520,250,0,0">
                    <TextBlock Text="Authorized By: ___________________" FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
