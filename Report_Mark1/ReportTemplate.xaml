<UserControl
    x:Class="Report_Mark1.ReportTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Report_Mark1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Padding="20"
        Background="White"
        BorderBrush="Black"
        BorderThickness="1">
        <Grid Margin="-11,-11,-11,-11">
            <!--  Use a Canvas as the main container to allow dragging of child elements  -->
            <Canvas x:Name="mainCanvas">
                <!--  Header Section  -->
                <Canvas x:Name="headerCanvas">
                    <Border x:Name="headerBorder" BorderBrush="Transparent">
                        <StackPanel>
                            <TextBlock
                                HorizontalAlignment="Left"
                                FontSize="24"
                                FontWeight="Bold"
                                Text="KR BAKERS" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontSize="16"
                                Text="Sales Report" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontSize="12"
                                Text="Kochi" />
                            <TextBlock
                                Margin="0,0,0,20"
                                FontSize="12"
                                Text="{Binding CurrentDate}" />
                        </StackPanel>
                    </Border>
                </Canvas>

                <!--  Table Section  -->
                <Canvas x:Name="tableCanvas">
                    <Border
                        x:Name="tableBorder"
                        BorderBrush="Transparent">
                        <DataGrid
                            x:Name="reportDataGrid"
                            AutoGenerateColumns="True"
                            Background="White"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            GridLinesVisibility="All"
                            IsReadOnly="False"
                            ItemsSource="{Binding ReportItems}">
                            <DataGrid.Resources>
                                <!--  Style for DataGrid Column Headers  -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F0F0F0" />
                                    <Setter Property="BorderBrush" Value="Black" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="Padding" Value="5" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Style>
                                <!--  Style for DataGrid Cells  -->
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderBrush" Value="Gray" />
                                    <Setter Property="BorderThickness" Value="0.5" />
                                    <Setter Property="Padding" Value="5" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                </Style>
                                <!--  Style for DataGrid Rows  -->
                                <Style TargetType="DataGridRow">
                                    <Setter Property="BorderBrush" Value="Gray" />
                                    <Setter Property="BorderThickness" Value="0.5" />
                                    <Setter Property="MinHeight" Value="30" />
                                </Style>
                            </DataGrid.Resources>
                        </DataGrid>
                    </Border>
                </Canvas>

                <!--  Footer Section  -->
                <Canvas x:Name="footerCanvas">
                    <Border x:Name="footerBorder"
                            BorderBrush="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontStyle="Italic" Text="Authorized By: ___________________" />
                        </StackPanel>
                    </Border>
                </Canvas>
            </Canvas>
        </Grid>
    </Border>
</UserControl>